{
  "name": "degrees-of-lewdity-android-app",
  "version": "0.2.17-dev",
  "description": "This sub-project exists to build DoL as an Android app",
  "main": "Degrees of Lewdity.html",
  "scripts": {
    "//": "These script may require additional setup. See docs/android-build.md for more details",
    "pre:create-vd": "sdkmanager \"system-images;android-24;google_apis;x86\"",
    "create-vd": "avdmanager create avd -n \"dol-android\" -k \"system-images;android-24;google_apis;x86\" -d \"Pixel 2\"",

    "build-debug": "cordova build --debug",
    "build-release": "node scripts/releaseBuildAskForPassword.js",

    "//": "NOTE: install script (while run using npm) does not work in some situations, not sure why",
    "install-debug": "adb install -r platforms/android/app/build/outputs/apk/debug/app-debug.apk",
    "install-release": "adb install -r platforms/android/app/build/outputs/apk/release/app-release.apk",
    "uninstall": "adb uninstall com.degrees.of.lewdity.AppEntry",

    "genkey-android-public-release": "keytool -genkeypair -v -storetype PKCS12 -keystore ../keys/dol.keystore -alias android-public-release -keyalg RSA -keysize 4096 -dname \"CN=dol team\" -validity 3650"
  },
  "repository": {
    "type": "git",
    "url": "git@ssh.gitgud.io:vrelnir/degrees-of-lewdity.git"
  },
  "author": "Vrelnir",
  "devDependencies": {
    "cordova": "^10.0.0",
    "cordova-android": "^8.1.0",
    "cordova-plugin-whitelist": "^1.3.4",
    "read": "^1.0.7"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  },
  "dependencies": {}
}