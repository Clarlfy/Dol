:: Widgets Stats [widget]

<<widget "trauma">><<nobr>>
<<if $args[0]>>
  <<if $args[0] gte 0>>
	<<set $trauma += ($args[0] * 3) - (($args[0] * 1.5) * ($control / $controlmax))>>
	<<if $dev is 1>><<set $control -= $args[0]>><</if>>
  <<else>>
	<<set $trauma += ($args[0] * 3) + (($args[0] * 1.5) * ($control / $controlmax))>>
  <</if>>
<</if>>
<</nobr>><</widget>>

<<widget "combattrauma">><<nobr>>
<<if $args[0]>>
  <<if $args[0] gte 0>>
	<<set $trauma += ($args[0] * 1) - (($args[0] * 0.5) * ($control / $controlmax))>>
	<<if $dev is 1>><<set $control -= $args[0]>><</if>>
  <<else>>
	<<set $trauma += ($args[0] * 1) + (($args[0] * 0.5) * ($control / $controlmax))>>
  <</if>>
<</if>>
<</nobr>><</widget>>

