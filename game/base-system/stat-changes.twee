<<widget "status">><<nobr>>
<<if $args[0]>>
	<<if $args[0] gt 0>>
	<<set $cool += ($args[0] * 1)>>
		<<if $faceacc is "cool shades">>
		<<set $cool += ($args[0] * 1)>>
		<</if>>
		<<if $headacc is "beanie">>
		<<set $cool += ($args[0] * 1)>>
		<</if>>
	<<elseif $args[0] lt 0>>
	<<set $cool *= (1 - ($args[0] / -100))>>
	<</if>>
<</if>>
<</nobr>><</widget>>

