:: Widgets Temperature Passout [widget]
/* This widget is run on its own after passout */
<<widget "passouttemperature">>
	<<cleareventpool>>
	/* FROSTBITE */
	<<if _passout is "cold">>
		<<set V.player.bodyTemperature to setup.WeatherSettings.temperature.minTemperature>>
		You pass out from the cold.
		<br><br>
		<<switch $location>>
			<<case "">>
			<<default>>
				/* Generic events */
				<<addinlineevent "ambulance" 0.1>>
					<<link [[Everything fades to black...|Ambulance rescue]]>><</link>>
				<</addinlineevent>>
				<<addinlineevent "generic" 1>>
					<<link [[Everything fades to black...|Passout Hypothermia]]>><</link>>
				<</addinlineevent>>
		<</switch>>
	/* HEATSTROKE */
	<<elseif _passout is "heat">>
	<<set V.player.bodyTemperature to setup.WeatherSettings.temperature.maxTemperature>>
		You pass out from the heat.
		<br><br>
		<<switch $location>>
			<<case "">>
			<<default>>
				/* Generic events */
				<<addinlineevent "ambulance" 0.1>>
					<<link [[Everything fades to black...|Ambulance rescue]]>><</link>>
				<</addinlineevent>>
				<<addinlineevent "generic" 1>>
					<<link [[Everything fades to black...|Passout Hyperthermia]]>><</link>>
				<</addinlineevent>>
		<</switch>>
	<</if>>
	<<runeventpool>>
<</widget>>

/*
To get the previous major area passage, use: $safePassage (for links in the last passage, unless we want to link the player elsewhere)
*/

